{
 "variables": {
    "release_path": null,
    "project_id": null,
    "installer_path": null,
    "json_credentials":  "",
    "zone": "us-central1-f",
    "source_image": "ubuntu-1404-trusty-v20150909a",
    "target_image": "{{env `USER`}}-spinnaker-{{timestamp}}",
    "install_args": ""
 },

 "builders": [{
    "type": "googlecompute",
    "account_file": "{{user `json_credentials`}}",
    "project_id": "{{user `project_id`}}",
    "source_image": "{{user `source_image`}}",
    "zone": "{{user `zone`}}",
    "image_name": "{{user `target_image`}}"
 }],

 "provisioners": [
  {
    "type": "file",
    "source": "{{user `installer_path`}}",
    "destination": "/tmp/install_spinnaker.sh"
  },
  {
    "type": "shell",
    "inline": ["chmod +x /tmp/install_spinnaker.sh",
               "/tmp/install_spinnaker.sh --release_path {{user `release_path`}} --package_manager {{user `install_args`}}"]
  }
 ]
}
