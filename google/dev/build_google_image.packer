{
 "variables": {
    "release_uri": null,
    "project_id": null,
    "installer_path": null,
    "json_credentials":  "",
    "zone": "us-central1-f",
    "source_image": "ubuntu-1404-trusty-v20150909a",
    "target_image": "{{env `USER`}}-spinnaker-{{timestamp}}",
    "install_args": ""
 },

 "builders": [{
    "type": "googlecompute",
    "account_file": "{{user `json_credentials`}}",
    "project_id": "{{user `project_id`}}",
    "source_image": "{{user `source_image`}}",
    "zone": "{{user `zone`}}",
    "image_name": "{{user `target_image`}}"
 }],

 "provisioners": [
  {
    "type": "file",
    "source": "{{user `installer_path`}}",
    "destination": "/tmp/install_spinnaker.py.zip"
  },
  {
    "type": "shell",
    "inline": ["python /tmp/install_spinnaker.py.zip --package_manager --release_path={{user `release_uri`}} {{user `install_args`}}"]
  }
 ]
}
